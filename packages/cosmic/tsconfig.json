{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "sourceMap": true,
        "baseUrl": ".",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "paths": {
            "/@/*": ["./src/*"],
            "@e2e/*": ["../../e2e/*"],
            "san": ["node_modules/san"],
            "san/*": ["node_modules/san/*"],
            "@cosui/cosmic/*": [
                "src/*",
                "src/*/mobile",
                "src/*/pc",
                "src/*/index.mobile.ts",
                "src/*/index.pc.ts"
            ]
        }
    },
    "include": [
        "./src/**/*.ts",
        "../../global.d.ts"
    ],
    "exclude": [
        "**/__tests__/**/*.ts"
    ]
}
